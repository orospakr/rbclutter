#include <clutter/clutter.h>

/* MAKE_BOXED(ClutterKnot x:gint y:gint) */

static VALUE
rbclt_knot_equals (VALUE self, VALUE other)
{
  ClutterKnot *knota = ((ClutterKnot *) RVAL2BOXED (self, CLUTTER_TYPE_KNOT));
  ClutterKnot *knotb = ((ClutterKnot *) RVAL2BOXED (other, CLUTTER_TYPE_KNOT));

  return clutter_knot_equal (knota, knotb) ? Qtrue : Qfalse;
}

void
rbclt_knot_init ()
{
  VALUE klass = G_DEF_CLASS (CLUTTER_TYPE_KNOT, "Knot", rbclt_c_clutter);

  /* METHOD_DEFINITIONS */
  rb_define_method (klass, "==", rbclt_knot_equals, 1);

  G_DEF_SETTERS (klass);
}
